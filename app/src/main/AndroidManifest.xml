<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.saypresent">

    <application
        android:allowBackup="true"
        android:icon="@drawable/say_present_logo_single"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".QRScannerActivity"></activity>
        <activity android:name=".EventDetailActivity" />
        <activity android:name=".TestingActivity" />
        <activity android:name=".DisplayQRActivity" />
        <activity android:name=".EventActivity" />
        <activity android:name=".addEvent" /> <!-- FOR TESTING -->
        <activity android:name=".checkpoint_list" />
        <activity android:name=".EventListActivity" /> <!-- FOR TESTING -->
        <activity android:name=".Dashboard" />
        <activity android:name=".SignUp" />
        <activity android:name=".LoginPage" />
        <activity android:name=".Login" />
        <activity
            android:name=".MainActivity"
            android:theme="@style/AppTheme.SplashScreen">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>


        <meta-data
            android:name="com.google.android.gms.vision.DEPENDENCIES"
            android:value="barcode" />

    </application>

    <uses-permission android:name="android.permission.CAMERA" />
    <uses-feature android:name="android.hardware.camera.autofocus" />
    <uses-feature android:name="android.hardware.camera" android:required="false" />

</manifest>