        <activity android:name=".CheckpointActivity" />
        <activity android:name=".QRScannerActivity" />
        <activity android:name=".EventDetailActivity" />
        <activity android:name=".TestingActivity" />
        <activity
            android:name=".DisplayQRActivity"
            android:theme="@style/AppTheme.Users" />
        <activity android:name=".EventActivity" />
        <activity android:name=".addEvent" /> <!-- FOR TESTING -->
        <activity android:name=".checkpoint_list" />
        <activity android:name=".EventListActivity" /> <!-- FOR TESTING -->
        <activity android:name=".Dashboard"/>
        <activity android:name=".SignUp" />
        <activity android:name=".LoginPage" />
        <activity android:name=".Login" />
        <activity
            android:name=".MainActivity"
            android:theme="@style/AppTheme.SplashScreen">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <meta-data
            android:name="com.google.android.gms.vision.DEPENDENCIES"
            android:value="barcode" />
    </application>

</manifest>